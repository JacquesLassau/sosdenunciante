@model SosDenunciante.Models.Usuario
@{
    ViewBag.Title = "Login";    
    string contexto = Url.Action("Login", "Authentication");
}
<div class="hero">
    <div class="hero-body">
        <div class="container has-text-centered">
            <div class="column is-4 is-offset-4">
                <div class="box">
                    <h3 class="label label-tema-sos">RECUPERAR SENHA</h3>
                    @using (Html.BeginForm("PasswordEdit", "Authentication", FormMethod.Post))
                    {
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="field">
                            <div class="control">
                                @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "input is-large", placeholder = "Nova Senha", required = "required" } })
                                @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger float-end p-1" })
                            </div>
                        </div>
                        <div class="field">
                            <div class="control">
                                @Html.EditorFor(model => model.ConfirmaSenha, new { htmlAttributes = new { @class = "input is-large", placeholder = "Confirmar Senha", required = "required" } })
                                @Html.ValidationMessageFor(model => model.ConfirmaSenha, "", new { @class = "text-danger float-end p-1" })
                            </div>
                        </div>
                        <button type="submit" class="button is-block is-link is-large is-fullwidth input-tema-sos"><i class="fa fa-edit"></i> Alterar</button>
                        @Html.AntiForgeryToken()
                    }                    
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {@Scripts.Render("~/bundles/jqueryval")}
