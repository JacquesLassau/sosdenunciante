@model SosDenunciante.Models.Usuario
@{
    ViewBag.Title = "Login";
    string local = Url.Action("PasswordRecouver", "Authentication");
    string contexto = Url.Action("Login", "Authentication");
}
<div class="hero">
    <div class="hero-body">
        <div class="container has-text-centered">
            <div class="column is-4 is-offset-4">
                <div class="box">
                    <h3 class="label label-tema-sos">RECUPERAR SENHA</h3>
                    @using (Html.BeginForm("PasswordRecouver", "Authentication", FormMethod.Post))
                    {
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="field">
                            <div class="control">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "input is-large", placeholder = "E-mail", required = "required" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger float-end p-1" })                                
                            </div>
                        </div>                        
                        <button type="submit" class="button is-block is-link is-large is-fullwidth input-tema-sos"><i class="fa fa-paper-plane"></i> Enviar</button>                        
                        @Html.AntiForgeryToken()
                    }
                    <hr class="line-login-hero" />
                    <a class="button is-block btn-cadastro is-fullwidth" href="@Url.Action("Login","Authentication")"><i class="fa fa-reply"></i> Voltar</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {@Scripts.Render("~/bundles/jqueryval")}
