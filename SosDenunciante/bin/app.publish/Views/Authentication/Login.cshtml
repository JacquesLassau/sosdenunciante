@model SosDenunciante.Models.Usuario
@{
    ViewBag.Title = "Login";
    string local = Url.Action("Login", "Authentication");
}
<div class="hero">
    <div class="hero-body">
        <div class="container has-text-centered">
            <div class="column is-4 is-offset-4">
                <div class="box">
                    <h3 class="label label-tema-sos">LOGIN</h3>
                    @using (Html.BeginForm("Login", "Authentication", FormMethod.Post))
                    {
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="field">
                            <div class="control">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "input is-large", placeholder = "E-mail", required = "required" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger float-end p-1" })                                
                            </div>
                        </div>
                        <div class="field">
                            <div class="control">
                                @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "input is-large", placeholder = "Senha", required = "required" } })
                                @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger float-end p-1" })
                            </div>
                        </div>
                        <button type="submit" class="input-tema-sos button is-block is-link is-large is-fullwidth"><i class="fa fa-sign-in"></i> Entrar</button>
                        <a class="mt-1 is-block is-fullwidth" href="@Url.Action("PasswordRecouver", "Authentication")" style="color: #3f51b5;text-decoration: none;" onMouseOver="this.style.color = '#1d3093'" onMouseOut="this.style.color='#3f51b5'"> Esqueceu a senha<i class="fa fa-question"></i></a>
                        @Html.AntiForgeryToken()
                    }
                    <hr class="line-login-hero" />                    
                    <a class="button is-block btn-cadastro is-fullwidth" href="@Url.Action("Register","Authentication")"><i class="fa fa-external-link-square"></i> Primeiro Acesso</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {@Scripts.Render("~/bundles/jqueryval")}
